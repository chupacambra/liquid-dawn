<section id="{{ section.id }}" class=" text-center column-border masks-section-padding " style="background-color: {{ section.settings.bg_color }};">
  {%- unless settings.heading == "" -%}
    <div class="container">
      <h4>{{ section.settings.heading }}</h4>
      <h4>{{ section.blocks.size }}</h4>
      {%- unless settings.subheading == "" -%}
        <h2 class="mb-5">{{ section.settings.subheading }}</h2>
      {%- endunless -%}
    </div>
  {%- endunless -%}

  {%- unless section.blocks.size == 0 -%}
    <div class="swiper-container swiper1 overflow-hidden">
      <div class="swiper-wrapper mt-5">
        {% for block in section.blocks %}
          {% if block.settings.image_url != '' %}
            <div class="swiper-slide" {{ block_attributes }}>
              <div class="thumbContainer ">
                <img src="{{ block.settings.image_url | img_url }}">
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {%- endunless -%}

</section>

{% schema %}
  {
    "name": "slideshow",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#ffffff"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "How it works?"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      }
    ],
    "presets": [
      {
        "name": "slideshow",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_url",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}