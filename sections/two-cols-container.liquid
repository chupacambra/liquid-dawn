<section class="column-border masks-section-padding pink-gradient" id="{{ section.id }}">
  <div class="container">
    <div class="row flex-lg-row-reverse">
      <div class="col-12 col-lg-6 d-flex align-items-center justify-content-center position-relative overflow-hidden">
        <img class="object-fit --cover" loading="lazy" src="{{ section.settings.image | img_url: "800x"}} ">
        <div class="masks-btn masks-btn-white position-absolute">{{ section.settings.btn_text }}</div>
      </div>
      <div class="col-12 col-lg-6 d-column pe-lg-5 d-flex flex-column justify-content-center text-center text-lg-start">
        <h1 class="mt-lg-0">{{ section.settings.heading }}</h1>
        <p>{{ section.settings.subheading }}</p>
        <div>
          <div class="masks-btn ">{{ section.settings.btn_text }}</div>
        </div>
      </div>
    </div>
  </div>

</section>

{% schema %}
  {
    "name": "two-cols-container",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "How it works?"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text",
        "default": "WATCH VIDEO >"
      }, {
        "type": "text",
        "id": "btn_text2",
        "label": "Button 2 Text",
        "default": "See How it works"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "two-cols-container",
        "category": "Content"
      }
    ]
  }
{% endschema %}