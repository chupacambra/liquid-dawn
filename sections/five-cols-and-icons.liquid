<style>
  h2 {

    font-weight: ;
  }
  span {
    font-style: italic;
    font-weight: lighter;

  }
</style>

<section id="{{ section.id }}" style="background: linear-gradient(90deg, rgba(213,142,215,0.7189250700280112) 0%, rgba(204,194,157,1) 100%);">

  <div class="container ">
    <div class="pt-40 pb-4   row d-flex justify-content-center">
      <div class="col-6">
        <h2>Omnilux redefined skincare with medical-grade
          <span>LED</span>
          light therapy proven to enhance your natural skin.</h2>
      </div>
    </div>

    <div class="row justify-content-center pb-5">
      {% for block in section.blocks %}
        <div class="col-2 mx-2 text-center">
          {% if block.settings.image_url != '' %}
            <img class="img-fluid" src="{{ block.settings.image_url | img_url: '100x' }}">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "five-cols-and-icons",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#eae6da"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "How it works?"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      }
    ],
    "presets": [
      {
        "name": "five-cols-and-icons",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon Name"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "image_picker",
            "id": "image_url",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}