<section id="{{ section.id }}" class="pink-gradient masks-section-padding">

  <div class="container">
    <div class=" row d-flex justify-content-center pb-5">
      <div class="col-12 text-center col-lg-10">
        <h2 class="m-0">Omnilux redefined skincare with medical-grade
          {{ section.settings.heading }}
          <span>LED</span>
          light therapy proven to enhance your natural skin.</h2>
      </div>
    </div>

    <div class="row justify-content-center pt-5 ">
      {% for block in section.blocks %}
        <div class="col-2 mx-2 text-center">
          {% if block.settings.image_url != '' %}
            <img class="img-fluid" src="{{ block.settings.image_url | img_url: '200x' }}">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "five-cols-and-icons",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#eae6da"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "Omnilux redefined skincare with medical-grade LED light therapy proven to enhance your natural skin."
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      }
    ],
    "presets": [
      {
        "name": "five-cols-and-icons",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon Name"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "image_picker",
            "id": "image_url",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}