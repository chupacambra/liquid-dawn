<section id="{{ section.id }}" style="background-color: {{ section.settings.bg_color }};" class="column-border">

  <div class="container masks-section-padding ">
    <div class="d-flex justify-content-center">
      <h4 class="pb-5">{{ section.settings.heading }}</h4>
    </div>

    <div class="row justify-content-center">
      {% for block in section.blocks %}
        <div class="col-4 col-lg-2 mx-2 text-center">
          {% if block.settings.image_url != '' %}
            <img class="img-fluid p-3" src="{{ block.settings.image_url | img_url: '175x' }}">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "four-cols-standard",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#ffffff"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "AWARDS AND RECOGNITIONS?"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      }
    ],
    "presets": [
      {
        "name": "five-cols-and-icons",
        "category": "Content"
      }
    ],
    "presets": [
      {
        "name": "four-cols-standard",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon Name"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "image_picker",
            "id": "image_url",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}