<style>
  h1 {
    font-size: 50px;
    font-weight: 300;
  }
  span {
    font-style: italic;
    font-weight: 100;

  }
</style>

<section id="{{ section.id }}">

  <div class="container">
    <div class="d-flex justify-content-center">
      <h4 style="ju" class="py-5">AWARDS AND RECOGNITIONS</h4>
    </div>

    <div class="row justify-content-center py-5">
      {% for block in section.blocks %}
        <div class="col-2 mx-2 text-center">
          {% if block.settings.image_url != '' %}
            <img class="img-fluid" src="{{ block.settings.image_url | img_url: '100x' }}">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "four-cols-standard",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#eae6da"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "How it works?"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      }
    ],
    "presets": [
      {
        "name": "five-cols-and-icons",
        "category": "Content"
      }
    ],
    "presets": [
      {
        "name": "four-cols-standard",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon Name"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "image_picker",
            "id": "image_url",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}