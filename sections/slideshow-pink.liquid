<section id="{{ section.id }}" class=" text-center column-border pink-gradient masks-section-padding p-0 overflow-hidden ">

  <div class="container mt-5 overflow-hidden">
    <h1 class="svg-demo" class="mt-5">{{ section.settings.heading }}</h1>
  </div>

  <div class="swiper-container swiper2 overflow-hidden slider-pink-border">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-column swiper-slide slider2-border-right d-flex flex-column">
          <p class="svg-demo">{{ block.settings.text }}</p>
          <h3 class="fw-bolder">{{ block.settings.subheading }}</h3>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <div class="container-fluid mt-5 overflow-hidden">
    <div class="row d-flex  justify-content-center mb-5">
      <div id="slider-btn-prev" class="slider-btn">←</div>
      <div id="slider-btn-next" class="slider-btn">→</div>


    </div>

    <div class="row px-5 d-flex mb-2">
      <div class="col-12 col-sm-6 text-center text-sm-start px-md-5">
        <h1>{{ section.settings.heading_two }}</h1>
      </div>
      <div class="col-12 col-sm-6 align-items-start text-center text-sm-end px-0 px-md-5">
        <div class="masks-btn">{{ section.settings.btn_text }}</div>
      </div>
    </div>
  </div>

  <!-- Slider main container -->

</section>

{% schema %}
  {
    "name": "slideshow-pink",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "What they say?"
      }, {
        "type": "text",
        "id": "heading_two",
        "label": "Heading 2",
        "info": "Leave empty to disable",
        "default": "What they say?"
      }, {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text"
      }
    ],
    "presets": [
      {
        "name": "slideshow-pink",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"

          }, {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
          }, {
            "type": "html",
            "id": "svg",
            "label": "Svg icon"
          }
        ]
      }
    ]
  }
{% endschema %}