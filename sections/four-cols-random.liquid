<style>
  .btn {
    background-color: transparent;
    border: 1px solid black;
    color: black;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    text-transform: uppercase;
    font-weight: bold;
  }

  .btn:hover {
    background-color: black;
    color: white;
  }

  h1 {
    font-size: 5.5rem;
    font-weight: 300;
    margin-bottom: 3%;
  }
  h2 {
    font-size: 4rem;
    font-weight: 300;
    margin-top: 2%;
    margin-bottom: 2%;
  }

  p {
    margin-top: ;
    font-size: 2rem;
  }
  .custom-div {
    margin-left: 10%;
  }
</style>

<section class="column-border" id="{{ section.id }}" style="background: linear-gradient(90deg, rgba(204,209,225,1) 0%, rgba(243,241,242,1) 34%);">
  <div class="container justify-content-center">
    <!-- HEADER -->
    <div class="g-5 row justify-content-center py-5 px-5">
      <div class="col-6 text-center">
        <h1>Get professional results at home</h1>
        <p>Designed with the same optimized energy output and wavelengths of light as our gold-standard Omnilux Medical professional devices, you get professional results in a single, 10-minute treatment session, at a fraction of the cost.</p>
      </div>
    </div>
    <!-- COLS -->
    <div class="g-5 row justify-content-center py-5 px-5">
      {% for block in section.blocks %}
        {% assign my_variable = forloop.index0 | modulo:2 %}
        {%- if my_variable  == 0 -%}
          <div class="col-4">
            <img class="img-fluid" loading="lazy" src="{{ block.settings.image_url | image_url: width: 2400, height: 2400 }} ">
          </div>
        {%- else -%}
          <div class="col-2">
            <img class="img-fluid" loading="lazy" src="{{ block.settings.image_url | image_url: width: 2400, height: 2400 }} ">
          </div>
        {%- endif -%}
      {% endfor %}
    </div>
    <!-- BUTTON -->
    <div class="g-5 row justify-content-center py-5 px-5">
      <div>
        <div class="btn">SHOP ALL</div>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "four-cols-random",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#eae6da"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave empty to disable",
        "default": "How it works?"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "info": "Leave empty to disable"
      }
    ],
    "presets": [
      {
        "name": "four-cols-random",
        "category": "Content"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon Name"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }, {
            "type": "image_picker",
            "id": "image_url",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}